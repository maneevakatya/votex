.main-catalogue{
  display: flex;
  height: calc(100vh - 239px);

  &__item{
    display: block;
    width: 25%;
    display: flex;
    flex-direction: column;
    text-decoration: none;

    &:hover .main-catalogue__img{
      opacity: 0.9;
    }
    &:hover .main-catalogue__text{
      border-color: transparent;
    }
  }
  &__img{
    max-width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    transition:opacity 0.3s ease;
  }
  &__name{
    padding-left: 22px;
    padding-top: 15px;
    padding-bottom: 30px;
  }
  &__text{
    font-size: 28px;
    color: #454545;
    border-bottom:1px solid #454545;
    transition: border-color 0.3s ease;

  }
}
