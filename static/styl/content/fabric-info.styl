.fabric-info{
  margin-bottom: 50px;
  display: flex;

  p{
    max-width: 792px;
    width: 100%;
    color: #454545;
    font-size: 17px;
    margin-top: 0;
    margin-bottom: 52px;
  }
  &__previews{
    max-width: 454px;
    width: 100%;
    margin-right: 40px;
  }
  &__using{
    display: flex;
    max-width: 290px;
    width: 100%;
    justify-content: space-between;
    margin-bottom: 30px;
  }
  &__icon{
    width: 58px;
    height: 58px;
    background-size: cover;
  }
  &__imgs{
    display: flex;
    justify-content: space-between;
    margin-top: 30px;
  }
  &__main-img{
    position: relative;
    cursor: pointer;
    max-width: 454px;
    &:before{
      content:"";
      position: absolute;
      background-size: cover;
      background-image: url("../i/zoom.png");
      width: 56px;
      height: 56px;
      cursor: pointer;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    &:after{
      content:"";
      position: absolute;
      width: 100%;
      height: 100%;
      top:0;
      bottom:0;
      left: 0;
      right:0;
      opacity: 0;
      transition: opacity 0.6s ease;
    }
    &:hover:before{
      opacity: 0.6;
    }
    &:hover:after{
      background: #000;
      opacity: 0.1;
    }
  }
  &__img-big{
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }
  &__img-small{
    border-style: none;
    width: 100%;
    height: auto;
    object-fit: contain;
  }
  &__img{
    cursor: pointer;
    opacity: 1;
    transition: opacity 0.6s ease;
    &:hover{
      opacity: 0.7;
    }
  }
  &__colors{
    display: flex;
    flex-wrap: wrap;
    padding-left: 10px;
  }
  &__color{
    margin-right: 47px;
    margin-bottom: 36px;
  }
  &__color img{
  margin-bottom: 15px;
  cursor: pointer;
  width: 100%;
  }
  &__color span{
  display: block;
  text-align: center;
  }
}
