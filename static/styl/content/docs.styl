.docs{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  &__item{
    max-width: 424px;
    width: 100%;
    height: 130px;
    display: flex;
    border:4px solid #d5d5d5;
    padding-left: 173px;
    padding-right: 50px;
    position: relative;

    &:before{
      content:"";
      position: absolute;
      background-size: cover;
    }
    &--rules:before{
      width: 78px;
      height: 126px;
      left: 66px;
      top: -15px;
      background-image: url(../i/largebirka.png);
      }
    &--trials:before{
      width: 58px;
      height:90px;
      left: 79px;
      top: 13px;
      background-image: url(../i/largetest.png);
      }
    &--standarts:before{
      width: 81px;
      height:72px;
      left: 67px;
      top: 31px;
      background-image: url(../i/largefolders.png);
      }
     &:hover .docs__link{
      border-color: transparent;
      }

  }
  &__link{
    font-size: 16px;
    color: #454545;
    line-height: 1.4;
    align-self: center;
    display: inline;
    transition: border-color 0.6s ease;
  }
}
