	max-height: 100vh;
	overflow: hidden;
}
.btn{
	cursor: pointer;
  margin-top: 54px;
  font-size: 17px;
  color: #454545;
  border:0;
  background-color: transparent;
  border:2px solid #454545;
  max-width: 243px;
  width: 100%;
  text-align: center;
  display: block;
  line-height: 1;
	height: 48px;
  margin: 0 auto;
  margin-bottom: 64px;
	outline-color: transparent;
	transition: border-color 0.6s ease;
	&:hover{
		border-color: #d5d5d5;
	}
}
.btn.news{
	margin-top: 32px;
}
.btn.fabrics{
	margin-top: -7px;
}
.btn.request{
	margin-top: 24px;
}
.burger-menu {
  width: 40px;
  height: 44px;
  background: transparent;
  border: 0;
  display: none;
  cursor: pointer;
  outline-color: transparent;
  position: relative;
  padding: 0;
  overflow: hidden;
	margin-left: 20px;
  transition: background .3s;
}
.burger-menu span {
    display: block;
    position: absolute;
    left: 0;
    width: 100%;
    height: 5px;
    bottom: 13px;
    background: #f20000;
    transition: background 0s .3s;
}
.burger-menu span:after, .burger-menu span:before {
    position: absolute;
    display: block;
    left: 0;
    width: 100%;
    height: 5px;
    background-color: #f20000;
    content: "";
    transition-duration: .3s, .3s;
    transition-delay: .3s, 0s;
}
.burger-menu span:before {
    top: 13px;
}
.burger-menu span:before {
    transition-property: top, transform;
}
.burger-menu span:after {
    bottom: 13px;
}
.burger-menu span:after {
    transition-property: bottom, transform;
}

