.catalogue{
  display: flex;
  &__title{
    font-size: 28px;
    color: #454545;
    font-weight: 400;
    margin: 0;
    margin-bottom: 31px;
  }
  &__content{
    padding-bottom: 40px;
    width: 100%;
  }
  &__item{
    display: flex;
    margin-bottom: 40px;
    align-items: flex-start;
    text-decoration: none;
    color: #454545;
  }
  &__img-wrap{
    margin-right: 33px;
    max-width: 371px;
    width: 100%;
    flex-shrink: 0;
  }
  &__item-img{
    width: 100%;
  }
  &__item-text p{
    font-size: 16px;
    color: #454545;
    margin: 0;
    line-height: 2.3;
  }
  &__item-text h3{
    color: #454545;
    font-size: 20px;
    margin: 0;
    font-weight: 400;
    margin-top: -4px;
    margin-bottom: 17px;
  }
}
