html {
	-webkit-box-sizing border-box;
	box-sizing border-box;
}

*,
*::after,
*::before {
	-webkit-box-sizing inherit;
	box-sizing inherit;
}

body,
html {
	width 100%;
	font-family: 'Museo Sans Cyrl';
}
ul{
	list-style: none;
	margin: 0;
	padding: 0;
}
