.news{
  display: flex;

  &__img{
    margin-bottom: 10px;
  }
  &__list{
    display: flex;
    flex-wrap: wrap;
    padding-top: 63px;
    max-width: 1213px;
  }
  &__item{
    margin-right: 29px;
    max-width: 280px;
    width: 100%;
    margin-bottom: 43px;
    &:nth-child(4n){
      margin-right: 0;
    }
  }
  &__date{
    font-size: 11px;
    color: #454545;
  }
  &__title{
    font-size: 15px;
    color: #454545;
    margin: 0;
    margin-top: 6px;
    line-height: 1.4;
  }
  &__showmore{
    margin-top: 54px;
    font-size: 17px;
    color: #454545;
    border:0;
    background-color: transparent;
    border:2px solid #454545;
    padding-left: 66px;
    padding-top: 23px;
    padding-bottom: 21px;
    padding-right: 61px;
    display: block;
    line-height: 0;
    margin: 0 auto;
    margin-top: 32px;
    margin-bottom: 64px;
  }
}
