.news{
  &__content{
    display: flex;
  }
  &__page-title{
    font-size: 28px;
    color: #454545;
    font-weight: 400;
    margin: 0;
    text-align: right;
    margin-bottom: 40px;
  }
  &__list{
    display: flex;
    flex-wrap: wrap;
    padding-top: 60px;
    max-width: 1213px;
    width: 100%;
  }
  &__item{
    margin-right: 30px;
    max-width: 280px;
    width: 100%;
    margin-bottom: 25px;
    &:nth-child(4n){
      margin-right: 0;
    }
  }
  &__date{
    font-size: 11px;
    color: #454545;
  }
  &__title{
    font-size: 15px;
    color: #454545;
  }
  &__showmore{
    margin-top: 54px;
    font-size: 17px;
    color: #454545;
    border:0;
    background-color: transparent;
    border:2px solid #454545;
    padding-left: 63px;
    padding-top: 16px;
    padding-bottom: 16px;
    padding-right: 63px;
    display: block;
    margin: 0 auto;
    margin-bottom: 64px;
  }
}
